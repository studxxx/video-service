{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1.0",
    "ext-json": "^1.5",
    "ext-mbstring": "*",
    "doctrine/orm": "^2.7",
    "psr/http-server-handler": "^1.0",
    "ramsey/uuid": "^3.9",
    "slim/slim": "^3.12.3",
    "symfony/console": "^4.4",
    "symfony/dotenv": "^4.4",
    "zendframework/zend-config-aggregator": "^1.2",
    "zendframework/zend-diactoros": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Api\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Api\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
